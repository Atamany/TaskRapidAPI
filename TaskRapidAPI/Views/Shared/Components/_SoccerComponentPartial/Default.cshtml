@model SoccerViewModel
<div class="col-md-4">
    <div class="card">
        <div class="card-header bg-success text-white">
            <i class="fas fa-futbol me-2"></i>Son Maç
        </div>
        <div class="card-body match-score">
            <div class="d-flex justify-content-between align-items-center">
                <div class="text-center">
                    <img src="https://w7.pngwing.com/pngs/558/402/png-transparent-white-and-black-soccer-ball-illustration-football-soccer-ball-sport-sports-equipment-sports.png" class="team-logo" alt="@Model.response.live.FirstOrDefault()?.home.name">
                    <h6>@Model.response.live.FirstOrDefault()?.home.name</h6>
                </div>
                <div class="team-score">@Model.response.live.FirstOrDefault()?.home.score - @Model.response.live.FirstOrDefault()?.away.score</div>
                <div class="text-center">
                    <img src="https://w7.pngwing.com/pngs/558/402/png-transparent-white-and-black-soccer-ball-illustration-football-soccer-ball-sport-sports-equipment-sports.png" class="team-logo" alt="@Model.response.live.FirstOrDefault()?.away.name">
                    <h6>@Model.response.live.FirstOrDefault()?.away.name</h6>
                </div>
            </div>
            <small class="text-center d-block">Maç Sonu</small>
        </div>
    </div>
</div>