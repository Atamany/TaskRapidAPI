@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>RapidAPI</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link rel="stylesheet" href="~/Template/style.css">
</head>
<body>
    <div class="container-fluid">
        <div class="row">
            <!-- Ana İçerik -->
            <div class="col-12 p-4">
                <div class="dashboard-header">
                    <div class="dashboard-title">
                        <h2><i class="fas fa-chart-line me-2"></i>RapidAPI</h2>
                        <span class="made-by">Made by <a href="https://github.com/Atamany/" target="_blank">Atamany</a></span>
                    </div>
                    <button class="btn btn-outline-primary">
                        <i class="fas fa-sync-alt me-2"></i>Yenile
                    </button>
                </div>

                <!-- Döviz Kurları -->
                <div class="row">
                    @await Component.InvokeAsync("_UsdTryComponentPartial")
                    @await Component.InvokeAsync("_EurTryComponentPartial")
                    @await Component.InvokeAsync("_GbpTryComponentPartial")
                </div>

                <!-- Akaryakıt Fiyatları -->
                @await Component.InvokeAsync("_FuelComponentPartial")

                <!-- Hava Durumu ve Kripto Paralar -->
                <div class="row">
                    <!-- Hava Durumu -->
                    @await Component.InvokeAsync("_WeatherComponentPartial")

                    <!-- Kripto Paralar -->                    
                    @await Component.InvokeAsync("_CryptoComponentPartial")
                </div>

                <!-- Haberler ve Maç Skoru -->
                <div class="row">
                    <!-- Haberler -->
                    @await Component.InvokeAsync("_NewsComponentPartial")

                    <!-- Maç Skoru -->
                    @await Component.InvokeAsync("_SoccerComponentPartial")

                </div>

                <!-- Günün Yemek Tarifi -->
                @await Component.InvokeAsync("_RecipeComponentPartial")

            </div>
        </div>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <!-- Custom JS -->
    <script src="~/Template/script.js"></script>
</body>
</html> 